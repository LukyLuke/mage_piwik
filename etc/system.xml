<?xml version="1.0" encoding="UTF-8"?>
<system>
	<sections>
		<web>
			<groups>
				<piwik translate="label">
					<label>PIWIK Analytics Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>650</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enable Piwik Integration</label>
							<frontend_type>select</frontend_type>
							<source_model>piwik/source_select</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<piwik_url translate="label">
							<label><![CDATA[Piwik URL<br/><em style="font-size:0.9em;">http://piwik.dom/piwik/dir</em>]]></label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</piwik_url>
						<site_id translate="label">
							<label><![CDATA[Piwik Site ID<br/><em style="font-size:0.9em;">Get it from URL-Param "idSite=" or the "id" from Administration-&gt;Websites</em>]]></label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</site_id>
					</fields>
				</piwik>
			</groups>
		</web>
	</sections>
</system>